<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:descendantFocusability="blocksDescendants">
	<ProgressBar
	    android:id="@+id/app_manager_progress"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    style="?android:attr/progressBarStyleHorizontal"/>
    <ImageView
        android:id="@+id/app_manager_thumbnails"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/app_default_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/app_manager_thumbnails"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_manager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用名称" />

        <TextView
            android:id="@+id/app_manager_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在下载" />
    </LinearLayout>
</RelativeLayout>