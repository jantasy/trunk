<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6fc" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginRight="0dp" >

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/contact_list_item_margin"
            android:layout_marginTop="8dp"
            android:src="@drawable/contact_group_icon_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/group_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/group_item_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#cc000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/group_item_child_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="0dp"
                android:textColor="#7f000000"
                android:textSize="11dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/group_item_expandable_show_parent"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <ImageView
                android:id="@+id/group_item_expandable_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                android:scaleType="center"
                android:src="@drawable/contact_list_expandable_show" />

        </RelativeLayout>
         <CheckBox
                android:id="@+id/group_item_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="33dp"
                android:button="@null"
                android:drawableRight="@drawable/contactlist_contact_selector" />

        <View
            android:layout_width="@dimen/contact_list_item_divider_width"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/comm_res_divider" />
    </RelativeLayout>

</RelativeLayout>