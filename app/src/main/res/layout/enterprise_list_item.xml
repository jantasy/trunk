<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="23dp"
    android:paddingRight="23dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/enterprise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/enterprise_item_name"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/enterprise_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterprise_name"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:drawableLeft="@drawable/ic_no_v"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textColor="@color/enterprise_item_name"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/enterprise_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/enterprise_select" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_divider" />

</RelativeLayout>