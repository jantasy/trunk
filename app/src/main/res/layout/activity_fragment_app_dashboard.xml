<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ffecf3fd"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/business_app"
            android:layout_width="82dip"
            android:layout_height="match_parent"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:text="企业应用"
            android:textColor="@color/label_tab_selector"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/local_app"
            android:layout_width="82dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dip"
            android:layout_marginStart="55dip"
            android:background="@drawable/tab_bg_selector"
            android:gravity="center"
            android:text="本地应用"
            android:textColor="@color/label_tab_selector"
            android:textSize="13dp" />
        
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/app_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>