<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    >
    <RelativeLayout 
        android:id="@+id/body_fl" 
        android:visibility="gone" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        >
        <LinearLayout 
            android:orientation="vertical" 
            android:id="@+id/bottom" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_alignParentBottom="true"
            >
            <LinearLayout 
                android:gravity="center" 
                android:id="@+id/map_show_ll" 
                android:background="@drawable/map_show_bottom_bg" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                >
                <ImageView 
                    android:id="@+id/map_show_up" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:src="@drawable/map_show_up_bg" 
                    />
                <TextView 
                    android:textSize="14dp" 
                    android:textColor="#ff51504e" 
                    android:layout_gravity="center_vertical" 
                    android:id="@+id/map_show_num" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="2dp" 
                    android:layout_marginRight="2dp" 
                    android:text="第1-10家" 
                    />
                <ImageView 
                    android:id="@+id/map_show_next" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:src="@drawable/map_show_next_bg"
                    />
            </LinearLayout>
        </LinearLayout>
        <com.baidu.mapapi.map.MapView 
            android:id="@+id/bmapsView" 
            android:clickable="true" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_above="@+id/bottom" 
            />
        <ImageButton 
            android:id="@+id/mylocation" 
            android:background="@drawable/bg_map" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="15.0dip" 
            android:layout_marginBottom="80.0dip" 
            android:src="@drawable/loc_selector" 
            android:layout_alignParentLeft="true" 
            android:layout_alignParentBottom="true" 
            />
    </RelativeLayout>
</LinearLayout>