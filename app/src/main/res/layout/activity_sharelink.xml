<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/sharelink_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="您的申请被驳回"
            android:textStyle="bold"
            android:textSize="18dp" />

        <TextView
            android:layout_below="@+id/sharelink_title"
            android:id="@+id/sharelink_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/sharelink_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sharelink_sharebtn"
            android:layout_below="@+id/sharelink_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/text616265" />

        <Button
            android:id="@+id/sharelink_sharebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dip"
            android:background="@drawable/contact_list_button"
            android:text="分享" />
    </RelativeLayout>

</ScrollView>