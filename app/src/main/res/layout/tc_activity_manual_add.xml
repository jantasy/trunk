<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp" >

        <EditText
            android:id="@+id/manual_input_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tc_input_bg"
            android:drawableLeft="@drawable/tc_input_phone"
            android:drawableStart="@drawable/tc_input_phone"
            android:drawablePadding="14dip"
            android:hint="请输入电话号码"
            android:inputType="phone"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/manual_clear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="#00000000"
            android:src="@drawable/tc_input_delete" />

    </RelativeLayout>

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="手机格式：13300000001\n\n固话格式：区号+固话号码+“*”+分机号，如01058550001*1234"
        />

    <Button
        android:id="@+id/btn_manaual_add"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tc_button_bg"
        android:text="添加" />

</LinearLayout>