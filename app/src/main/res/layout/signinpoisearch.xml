<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6fc"
    android:orientation="vertical" >

    <cn.yjt.oa.app.widget.ViewContainerStub
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false" />

    <ImageButton
        android:id="@+id/signin_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:contentDescription="@string/description"
        android:scaleType="centerInside"
        android:src="@drawable/btn_signin_camera" />



    <Button
        android:id="@+id/signin_ok"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="22dip"
        android:layout_marginRight="22dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/contact_list_button"
        android:gravity="center"
        android:text="@string/signin_ok"
        android:textColor="#4e6278"
        android:textSize="14dip" />

    <ImageView
        android:id="@+id/tv_check_in"
        android:layout_width="100dp"
        android:layout_height="61.8dp"
        android:layout_above="@+id/signin_ok"
         android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/description"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

</RelativeLayout>