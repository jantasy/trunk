                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="83dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_middle"
                        android:gravity="center"
                        android:text="邮箱"
                        android:textColor="#88000000"
                        android:textSize="13dip" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/right_middle"
                        android:ellipsize="end"
                        android:hint="@string/optional"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColor="#88000000"
                        android:textSize="13dip" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_tel"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="83dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_bottom"
                        android:gravity="center"
                        android:text="座机"
                        android:textColor="#88000000"
                        android:textSize="13dip" />

                    <EditText
                        android:id="@+id/tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/right_bottom"
                        android:ellipsize="end"
                        android:hint="@string/optional"
                        android:inputType="phone"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColor="#88000000"
                        android:textSize="13dip" />
                </LinearLayout>
            </LinearLayout>
           <!-- 
        </ScrollView>
 			-->
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_divider_line" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/contact_list_button"
                android:text="保存"
                android:textColor="#4e6278"
                android:textSize="13dip" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>