<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6fc"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="66dip"
        android:layout_height="66dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dip"
        android:layout_marginTop="@dimen/personal_icon_top_margin" />

    <TextView
        android:id="@+id/phone_munber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#95000000"
        android:textSize="13dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/personal_sex_bottom_margin"
        android:layout_marginTop="@dimen/personal_sex_top_margin" >

        <ImageView
            android:id="@+id/male"
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:layout_marginLeft="@dimen/personal_sex_margin_left"
            android:background="@drawable/personal_sex_bg_selector"
            android:scaleType="centerInside"
            android:src="@drawable/personal_center_male_selector" />

        <ImageView
            android:id="@+id/female"
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="@dimen/personal_sex_margin_right"
            android:background="@drawable/personal_sex_bg_selector"
            android:scaleType="centerInside"
            android:src="@drawable/personal_center_female_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

     <!--    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_layout" >
 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personal_padding"
                android:layout_marginRight="@dimen/personal_padding"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="83dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_top"
                        android:gravity="center"
                        android:text="姓名"
                        android:textColor="#88000000"
                        android:textSize="13dip" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/right_top"
                        android:ellipsize="end"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="#88000000"
                        android:textSize="13dip" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_company"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="83dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_middle"
                        android:gravity="center"
                        android:text="公司"
                        android:textColor="#88000000"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/right_middle"
                        android:editable="false"
                        android:ellipsize="end"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColor="@color/gray4"
                        android:textSize="13dip" />
                </LinearLayout>
				<!-- 
                <LinearLayout
                    android:id="@+id/ll_department"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="83dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_middle"
                        android:gravity="center"
                        android:text="部门"
                        android:textColor="#88000000"
                        android:textSize="13dip" />

                    <EditText
                        android:id="@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/right_middle"
                        android:editable="false"
                        android:ellipsize="end"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColor="#88000000"
                        android:textSize="13dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_position"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="83dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_middle"
                        android:gravity="center"
                        android:text="职位"
                        android:textColor="#88000000"
                        android:textSize="13dip" />

                    <EditText
                        android:id="@+id/position"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/right_middle"
                        android:editable="false"
                        android:ellipsize="end"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColor="#88000000"
                        android:textSize="13dip" />
                </LinearLayout>
