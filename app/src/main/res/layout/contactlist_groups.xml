<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6fc"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textSize="11dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/contact_list_division"
        android:paddingLeft="@dimen/contact_list_item_margin"
        android:text="@string/contactlist_groups_my_groups" />

    <cn.yjt.oa.app.widget.listview.PullToRefreshExpandableListView
        android:id="@+id/contact_groups_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@null"
        android:childDivider="@null"
        android:divider="@null"
        android:dividerHeight="0px"
        android:groupIndicator="@null" >
    </cn.yjt.oa.app.widget.listview.PullToRefreshExpandableListView>

</LinearLayout>