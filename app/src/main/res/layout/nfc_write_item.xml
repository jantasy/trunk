<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nfc_write_item_bg"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="10dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nfc_write_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/nfc_icon_item_tag"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/nfc_icon_item_tag"
            android:gravity="center_vertical"
            android:text="家用" />

        <ImageButton
            android:id="@+id/nfc_item_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:layout_marginTop="4dp"
            android:focusable="false"
            android:contentDescription="@string/description"
            android:src="@drawable/nfc_icon_delete" />
    </RelativeLayout>
	<TextView
	    android:id="@+id/nfc_tag_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
</LinearLayout>