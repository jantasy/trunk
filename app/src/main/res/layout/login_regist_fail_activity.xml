<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="match_parent"
    android:background="#fafbfd"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dip"
        android:text="登录失败"
        android:textColor="#ff4a4a"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/fail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dip"
        android:text="账号或密码错误，请重新填写"
        android:textColor="#ff4a4a"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="31dip"
        android:src="@drawable/personal_divider_line" />

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dip"
        android:paddingBottom="7dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
       android:background="@drawable/personal_save_bt"
        android:text="确定"
        android:textSize="13dp" />

</LinearLayout>