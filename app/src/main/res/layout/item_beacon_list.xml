<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/beacon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前门"
        android:textColor="@color/enterprise_item_name"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/beacon_uumm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:layout_toLeftOf="@+id/beacon_delete"
        android:layout_below="@+id/beacon_name"
        android:textColor="@color/enterprise_item_name"
        android:textSize="13dp" />
    
     <TextView
        android:id="@+id/beacon_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:layout_toLeftOf="@+id/beacon_delete"
        android:layout_below="@+id/beacon_uumm"
        android:textColor="@color/enterprise_item_name"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/beacon_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        android:layout_below="@+id/beacon_area"
        android:text="2015-01-21 17:36:55"
        android:textColor="@color/enterprise_item_name"
        android:layout_marginBottom="20dp"
        android:textSize="11dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_divider" />
     <ImageView
        android:id="@+id/beacon_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/background_selector"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:focusable="false"
        android:src="@drawable/enterprise_delete_icon" />
    

</RelativeLayout>