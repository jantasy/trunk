<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_patrol_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="5dp"
            android:clickable="true"
            app:cardElevation = "0dp"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="NewApi">

            <RelativeLayout
                android:id="@+id/rl_patrol_location"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/patrol_location_checkin_icon"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="巡检定位签到"
                            android:textColor="#000"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_location"
                            android:text="到达巡检地点后，点击签到"
                            android:paddingTop="5dp"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="12dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_patrol_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="5dp"
            app:cardElevation = "0dp"
            android:visibility="gone"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="NewApi"
            >

            <RelativeLayout
                android:id="@+id/rl_patrol_manager"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/patrol_manage_icon"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/tv_manager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="巡检管理"
                            android:textColor="#000"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_manager"
                            android:text="巡检点、路线、人员、标签、时间的管理"
                            android:paddingTop="5dp"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="12dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_patrol_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="5dp"
            app:cardElevation = "0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="NewApi"
            >

            <RelativeLayout
                android:id="@+id/rl_patrol_record"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/modify_member"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/tv_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="巡检记录"
                            android:textColor="#000"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_record"
                            android:paddingTop="5dp"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:text="查看个人的巡检记录"
                            android:textSize="12dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_report_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="5dp"
            app:cardElevation = "0dp"
            android:visibility="gone"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="NewApi"
            >

            <RelativeLayout
                android:id="@+id/rl_report_form"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/patrol_excel_icon"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/tv_patrol_excel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="巡检报表"
                            android:textColor="#000"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_patrol_excel"
                            android:paddingTop="5dp"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:text="下载指定时间段内的巡检报表"
                            android:textSize="12dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_patrol_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="5dp"
            app:cardElevation = "0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="NewApi"
            >

            <RelativeLayout
                android:id="@+id/rl_patrol_remind"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_attendance"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        >

                        <TextView
                            android:id="@+id/tv_patrol_remind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="巡检提醒"
                            android:textColor="#000"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_patrol_remind"
                            android:text="设置每日巡检提醒时间"
                            android:paddingTop="5dp"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="12dp"/>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>