<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp" >

        <EditText
            android:id="@+id/input_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tc_input_bg"
            android:drawableLeft="@drawable/tc_input_phone"
            android:drawableStart="@drawable/tc_input_phone"
            android:drawablePadding="14dip"
            android:hint="输入您的手机号"
            android:inputType="phone"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/ib_clear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="#00000000"
            android:src="@drawable/tc_input_delete" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/input_verification_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="phone"
            android:background="@drawable/tc_input_bg"
            android:drawableLeft="@drawable/tc_verification_code"
            android:drawableStart="@drawable/tc_verification_code"
            android:drawablePadding="14dip"
            android:hint="输入验证码" />

        <Button
            android:id="@+id/btn_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/tc_input_bg"
            android:text="获取验证码" />
    </LinearLayout>

    <Button
        android:id="@+id/activate_ok"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tc_button_bg"
        android:text="@string/quiz_pic_sure" />

</LinearLayout>