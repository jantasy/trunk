<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/choice_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/feed_back_bg" >

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="14dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="请选择类型" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/contact_list_expandable_show" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/type_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

   

            <EditText
                android:id="@+id/feed_content"
                android:layout_width="match_parent"
                android:layout_height="250dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/contact_list_input"
                android:gravity="top|left"
                android:hint="畅所欲言"
                android:padding="14dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/phone_munber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dip"
                android:background="@drawable/contact_list_input"
                android:hint="手机号码"
                android:inputType="phone"
                android:padding="14dp"
                android:textSize="16dp" 
                 android:visibility="gone"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dip"
                android:background="@drawable/contact_list_input"
                android:hint="邮箱"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textSize="16dp" 
                 android:visibility="gone"/>

            <EditText
                android:id="@+id/qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dip"
                android:background="@drawable/contact_list_input"
                android:hint="QQ"
                android:inputType="phone"
                android:padding="14dp"
                android:textSize="16dp" 
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dip"
        android:background="@drawable/contact_list_button"
        android:text="提交" />

</LinearLayout>