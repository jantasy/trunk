<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/task_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/task_detail_content_bottom_margin"
        android:layout_marginTop="@dimen/task_detail_content_top_margin"
        android:lineSpacingExtra="3dp"
        android:textColor="#cc000000"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/task_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/task_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/task_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />
    
    <ImageView
        android:id="@+id/task_image4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/voice_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:id="@+id/task_voice_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/task_voice_bg"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/task_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@drawable/task_voice_0" />

        <TextView
            android:id="@+id/voice_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

</LinearLayout>