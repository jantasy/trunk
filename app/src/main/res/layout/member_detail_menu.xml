<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/member_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/enterprise_member_detail_height"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/detail_bg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/member_detail_bg" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/member_texture" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="49dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/member_phone"
            android:visibility="visible" />

        <TextView
            android:id="@+id/member_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_phone"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/department_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/member_department"
            android:visibility="visible" />

        <TextView
            android:id="@+id/member_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_department"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/position_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/member_position"
            android:visibility="visible" />

        <TextView
            android:id="@+id/member_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detail_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_admin"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="12dip"
            android:drawableTop="@drawable/setting_admin"
            android:gravity="center"
            android:paddingBottom="22dip"
            android:paddingTop="21dip"
            android:text="设为管理员"
            android:textColor="@color/label_tab_selector"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/modify_member"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="12dip"
            android:drawableTop="@drawable/modify_member"
            android:gravity="center"
            android:paddingBottom="22dip"
            android:paddingTop="21dip"
            android:text="修改信息"
            android:textColor="@color/label_tab_selector"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/check_attendance"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="12dip"
            android:drawableTop="@drawable/check_attendance"
            android:gravity="center_horizontal"
            android:paddingBottom="22dip"
            android:paddingTop="21dip"
            android:text="查看考勤"
            android:textColor="@color/label_tab_selector"
            android:textSize="13dip" />

        <TextView
            android:id="@+id/member_delete"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="12dip"
            android:drawableTop="@drawable/member_delete"
            android:gravity="center_horizontal"
            android:paddingBottom="22dip"
            android:paddingTop="21dip"
            android:text="删除"
            android:textColor="@color/label_tab_selector"
            android:textSize="13dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/admin_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignBottom="@+id/member_name"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/member_name"
            android:src="@drawable/setting_admin"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>