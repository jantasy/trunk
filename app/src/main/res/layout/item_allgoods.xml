<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="@drawable/common_press" 
    android:focusable="false" 
    android:clickable="false" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    >
    <View 
        android:id="@+id/tv_line"
        android:background="@drawable/dotline" 
        android:layout_width="fill_parent" 
        android:layout_height="0.5dip" 
        />
    <RelativeLayout 
        android:id="@+id/goods_rl" 
        android:paddingLeft="20.0dip" 
        android:paddingTop="5.0dip" 
        android:paddingRight="20.0dip" 
        android:paddingBottom="5.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:id="@+id/left" 
            android:layout_width="40.0dip" 
            android:layout_height="40.0dip" 
            android:src="@drawable/item_defout" 
            android:layout_centerVertical="true" 
            />
        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="8.0dip" 
            android:layout_toLeftOf="@+id/right" 
            android:layout_toRightOf="@+id/left"
            >
            <TextView 
                android:textSize="16.0sp" 
                android:textColor="@color/dark_normal" 
                android:id="@+id/goodname_tv" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="1.0dip" 
                android:text="柔和芝士" 
                />
            <LinearLayout 
                android:gravity="center_vertical" 
                android:orientation="horizontal" 
                android:paddingTop="5.0dip" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                >
                <TextView 
                    android:textSize="15.0sp" 
                    android:textColor="@color/widget_selected_front" 
                    android:id="@+id/goodpricetv" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="￥163" 
                    />
                <TextView 
                    android:textSize="12.0sp" 
                    android:textColor="@color/darker_gray" 
                    android:id="@+id/priceold_tv" 
                    android:paddingTop="1.0dip" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="13.0dip" 
                    android:text="原价￥90" />
            </LinearLayout>
        </LinearLayout>
        <ImageView 
            android:id="@+id/right" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:src="@drawable/right_to_blue" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" 
            />
    </RelativeLayout>
</LinearLayout>