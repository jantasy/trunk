<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_scrollview"
        android:scrollbars="none"
        android:visibility="gone"
        android:background="#fff" >

        <cn.yjt.oa.app.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="0dip"
            android:layout_height="40dp" />
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/struct_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" >

        <ProgressBar
            android:id="@+id/pb_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center"
            />
		<TextView
		    android:id="@+id/tv_nostruct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="您的企业当前还没有创建组织架构"
		   />
        
    </FrameLayout>

    <!--
    <cn.yjt.oa.app.widget.listview.PullToRefreshListView
