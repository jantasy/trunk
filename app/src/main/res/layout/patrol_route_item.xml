<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/tv_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="伟大的航路"
        android:textColor="@color/enterprise_item_name"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/route_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:alpha="0.7"
        android:text="描述:"
        android:layout_below="@+id/tv_route_name"
        android:textColor="@color/enterprise_item_name"
        android:textSize="13sp" />
    
  <TextView
        android:id="@+id/tv_route_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:alpha="0.7"
        android:layout_toRightOf="@+id/route_description"
        android:layout_below="@+id/tv_route_name"
        android:textColor="@color/TextColorGray"
        android:textSize="13sp" />
  
    <TextView
        android:id="@+id/tv_route_createtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        android:layout_below="@+id/tv_route_description"
        android:text="2015-01-21 17:36:55"
        android:textColor="@color/enterprise_item_name"
        android:layout_marginBottom="20dp"
        android:textSize="11sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_divider" />
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/background_selector"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:focusable="false"
        android:src="@drawable/enterprise_delete_icon" />
</RelativeLayout>